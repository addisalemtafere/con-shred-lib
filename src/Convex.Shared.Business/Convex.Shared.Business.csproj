<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Convex.Shared.Business</PackageId>
    <Version>1.0.0</Version>
    <Authors>Convex Team</Authors>
    <Company>Convex</Company>
    <Description>Business logic and calculations for Convex microservices</Description>
    <PackageTags>business;calculations;convex</PackageTags>
    <RepositoryUrl>https://github.com/convex/shared-libraries</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/convex/shared-libraries</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Copyright>Copyright Â© Convex 2024</Copyright>
    <PackageReleaseNotes>Initial release of Convex.Shared.Business</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <!-- Local NuGet Feed Configuration -->
  <PropertyGroup>
    <PackageOutputPath>../../packages</PackageOutputPath>
    <LocalNuGetFeed>C:\LocalNuGetFeed</LocalNuGetFeed>
  </PropertyGroup>

  <!-- Post-build event to push to local feed -->
  <Target Name="PushToLocalFeed" AfterTargets="Pack">
    <Exec Command="dotnet nuget push &quot;$(PackageOutputPath)\$(PackageId).$(Version).nupkg&quot; --source &quot;$(LocalNuGetFeed)&quot;" 
          ContinueOnError="true" />
  </Target>

</Project>
